# Docker Environment Variables
# Copy this file to .env for docker-compose

# Node Environment
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1

# PostgreSQL Configuration
POSTGRES_USER=ideabox
POSTGRES_PASSWORD=ideabox_password_change_me
POSTGRES_DB=ideabox_db
POSTGRES_PORT=5432

# PGAdmin Configuration
PGADMIN_EMAIL=admin@ideabox.com
PGADMIN_PASSWORD=admin_change_me
PGADMIN_PORT=5050

# Backend Port (exposed to host)
BACKEND_PORT=3000

# Database URL (automatically constructed in docker-compose)
# DATABASE_URL=postgresql://ideabox:ideabox_password_change_me@postgres:5432/ideabox_db?schema=public

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# CORS Configuration
CORS_ORIGIN=*

# Email Configuration (Optional - for production SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@ideabox.com

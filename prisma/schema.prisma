model Vote {
  id        String   @id @default(uuid())
  value     Int      // +1 ou -1 (ou juste 1 si tu veux seulement "like")
  userId    String
  ideaId    String
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  idea      Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@unique([userId, ideaId]) // Empêche un utilisateur de voter plusieurs fois pour la même idée
  @@map("votes")
}

// ============================================
// ACTION PLANNING
// ============================================

model PlanAction {
  id          String      @id @default(uuid())
  ideaId      String
  title       String
  description String?     @db.Text
  progress    Int         @default(0)
  status      Plan_Status @default(PENDING)
  tacheId     String?       
  deadline    DateTime?
  assignedTo  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Relations
  idea        Idea      @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  assignee    User?     @relation("AssignedActions", fields: [assignedTo], references: [id], onDelete: SetNull)
  taches      Tache[]


  @@map("plan_actions")
  @@index([ideaId])
  @@index([assignedTo])
  @@index([deadline])
}

model Tache {
  id            String       @id @default(uuid())
  planActionId  String
  title         String
  description   String?      @db.Text
  progress      Int          @default(0)
  status        Plan_Status  @default(PENDING)
  deadline      DateTime?
  assignedTo    String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  planAction    PlanAction   @relation(fields: [planActionId], references: [id], onDelete: Cascade)
  assignee      User?        @relation("AssignedTaches", fields: [assignedTo], references: [id], onDelete: SetNull)

  comments      Comment[]

  @@map("taches")
  @@index([planActionId])
  @@index([assignedTo])
  @@index([deadline])
}

// ============================================
// DYNAMIC FORMS
// ============================================

model FormModel {
  id          String        @id @default(uuid())
  name        String        @unique
  type        String?        
  description String?       @db.Text
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  // Relations
  variants    FormVariant[]

  @@map("form_models")
}

model FormVariant {
  id          String      @id @default(uuid())
  modelId     String
  name        String
  description String?     @db.Text
  isDefault   Boolean     @default(false)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Relations
  model       FormModel   @relation(fields: [modelId], references: [id], onDelete: Cascade)
  fields      FormField[]
  ideas       Idea[]

  @@map("form_variants")
  @@unique([modelId, name])
  @@index([modelId])
}

model FormField {
  id          String      @id @default(uuid())
  variantId   String
  label       String
  type        FieldType
  required    Boolean     @default(false)
  options     Json?
  placeholder String?
  helpText    String?
  order       Int
  visibleFor  Role[]    @default([])
  managedOnly Boolean?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Relations
  variant     FormVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@map("form_fields")
  @@unique([variantId, order])
  @@index([variantId])
}

// ============================================
// FILE MANAGEMENT
// ============================================

model FileMetadata {
  id            String   @id @default(uuid())
  originalName  String
  storageName   String   @unique
  mimeType      String
  size          Int
  path          String
  uploadedById  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  idea          Idea?

  @@map("file_metadata")
  @@index([storageName])
}

// ============================================
// COMMENTS & COLLABORATION
// ============================================

model Comment {
  id          String   @id @default(uuid())
  ideaId      String?
  tacheId     String?
  userId      String
  content     String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  idea        Idea?     @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  tache       Tache?    @relation(fields: [tacheId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("comments")
  @@index([ideaId])
  @@index([tacheId])
  @@index([userId])
  @@index([createdAt])
}
